package parallel;

import java.util.Vector;

/**
 * class that ensures First-In-First-Served lock acquisition among threads.
 * Again there is no mechanism to check whether a thread calling
 * <CODE>releaseLock()</CODE> actually had the lock prior to the call.
 * Uses the specific notification Design Pattern by Tom Cargill.
 * <p>Title: popt4jlib</p>
 * <p>Description: A Parallel Meta-Heuristic Optimization Library in Java</p>
 * <p>Copyright: Copyright (c) 2011</p>
 * <p>Company: </p>
 * @author Ioannis T. Christou
 * @version 1.0
 */
public class FIFOLock extends Lock {
  private Vector _waitingOn;
  private boolean _isFree;

  /**
   * public no-arg constructor
   */
  public FIFOLock() {
    super();
    _waitingOn = new Vector();
    _isFree=true;
  }


  /**
   * gets the lock.
   */
  public void getLock() {
    super.getLock();
    if (_isFree) {
      _isFree=false;
      super.releaseLock();
    } else {
      Object w = new Object();  // object on which the current thread will wait
      synchronized (w) {
        _waitingOn.add(w);
        while (_isFree==false) {
          try {
            super.releaseLock();
            w.wait();
            super.getLock();
          }
          catch (InterruptedException e) {
            Thread.currentThread().interrupt();
          }
        }
      }
      _isFree=false;
      super.releaseLock();
    }
  }


  /**
   * releases the lock.
   */
  public void releaseLock() {
    super.getLock();
    _isFree = true;
    if (_waitingOn.size()>0) {
      Object w = _waitingOn.remove(0);  // notify the oldest waiting thread
      synchronized (w) {
        w.notify();
      }
    }
    super.releaseLock();
  }
}

