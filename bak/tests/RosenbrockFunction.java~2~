package tests;

import popt4jlib.*;

/**
 *
 * <p>Title: popt4jlib</p>
 * <p>Description: A Parallel Meta-Heuristic Optimization Library in Java</p>
 * <p>Copyright: Copyright (c) 2011</p>
 * <p>Company: </p>
 *
 * This class implements the Rosenbrock Function in n-dimensions
 * @author Ioannis T. Christou
 * @version 1.0
 */
public class RosenbrockFunction implements FunctionIntf {
  public RosenbrockFunction() {
  }

  public double eval(Object arg) {
    double[] x = (double[]) arg;
    int n = x.length;
    double res = 0;
    for (int i=0; i<n-1; i++) {
      res += (1-x[i])*(1-x[i])+100*(x[i+1]-x[i]*x[i])*(x[i+1]-x[i]);
    }
    return res;
  }
}

